{
  "name": "@lokal-dev/react-native-bugbubble",
  "version": "1.0.0",
  "description": "React Native in-app debugging tool - Monitor network requests, WebSocket events, console logs, and analytics in real-time. Zero configuration, TypeScript support, draggable UI.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "example": "yarn workspace react-native-bugbubble-example",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\""
  },
  "keywords": [
    "react-native",
    "react-native-debugger",
    "react-native-devtools",
    "bugbubble",
    "debugger",
    "devtools",
    "debugging",
    "network-monitor",
    "network-debugger",
    "websocket-debugger",
    "analytics-debugger",
    "console-debugger",
    "network",
    "websocket",
    "analytics",
    "console",
    "inspector",
    "monitoring",
    "in-app-debugger",
    "react-native-network",
    "ios",
    "android",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lokal-app/react-native-bugbubble.git"
  },
  "author": {
    "name": "Shivangi",
    "email": "shivangi.gupta@getlokalapp.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lokal-app/react-native-bugbubble/issues"
  },
  "homepage": "https://github.com/lokal-app/react-native-bugbubble#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "^0.81.1",
    "@types/react": "^19.1.12",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^2.8.8",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-builder-bob": "^0.40.15",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.11.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "create-react-native-library": {
    "type": "library",
    "languages": "js",
    "tools": [
      "eslint"
    ],
    "version": "0.55.0"
  }
}
